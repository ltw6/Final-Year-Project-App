<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final_Year_Project_App.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Visible Light Identification App" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="When API Connected shows as true, the App has accessed the code and is ready to transfer" FontSize="16" Padding="30,0,30,0"/>
        <Label Text="API Connected: True" x:Name="APILabel" FontSize="16" Padding="30,0,30,0"/>
        <Button Text="Transmit Code" x:Name="transmitButton" Clicked="transmitButton_Clicked"/>
        <Label Text="Current Code"/>
        <Label Text="1234" x:Name="currentCode"/>
    </StackLayout>

</ContentPage>
